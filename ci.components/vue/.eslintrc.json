{
  "root": true,
  "extends": [
    "wikimedia/client/common",
    "plugin:vue/essential"
//    "wikimedia/language/es6"
//    "wikimedia/vue3/es6"
//    "wikimedia/mediawiki"
//    "wikimedia/mediawiki"
  ],
  "globals": {
    "exports": "writable"
  },
  "rules": {
    "no-console" : "off",
    "vue/no-v-model-argument" : "off",
    "max-len": ["error", { "code": 150 }]
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
