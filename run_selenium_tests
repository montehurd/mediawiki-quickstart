#!/bin/bash

source "./docker-compose-wrapper.sh"
source "./selenium/selenium.sh"

run_selenium_tests() {
  ensure_selenium_ready
  docker_compose exec -u root mediawiki npx wdio /var/www/html/w/tests/selenium/wdio.conf.override.js
}

if [[ "$0" == "${BASH_SOURCE[0]}" ]]; then
  run_selenium_tests "$@"
fi
